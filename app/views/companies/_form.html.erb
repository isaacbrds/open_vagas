<div class="row py-5">
  <div class="card">
      <div class="card-header">
        <%= @company.new_record? ? "Nova empresa" : "Editar empresa #{@company.name}" %>
      </div>
      <div class="card-body">
        <%= simple_form_for @company do |f| %>
          <%= f.error_notification %>

          <%= f.input :name %>
          <%= f.input :url %>
          <%= image_tag(url_for(@company.logo), class: 'logo') unless @company.new_record? && !@company.logo.nil? %>
          <%= f.file_field :logo %>
      </div>
        <div class="card-footer">
          <%= f.button :submit, class: 'btn btn-success' %>
        </div>
      <% end %>
  </div>
</div>
