<div class="container py-5">
  <div class="card">
    <div class="card-header">
      <h3><%= @position.name %></h3>
    </div>
    <div class="card-body">
      <p><strong><%= t('activerecord.attributes.position.career') %>:</strong> 
        <%= t("activerecord.enums.position.career.#{@position.career}") %></p>

      <p><strong><%= t('activerecord.attributes.position.contract') %>:</strong> 
        <%= t("activerecord.enums.position.contract.#{@position.contract}") %></p>

      <p><strong><%= t('activerecord.attributes.position.remote') %>:</strong> 
        <%= @position.remote? ? t('activerecord.attributes.remote.yes') : t('activerecord.attributes.remote.no') %></p>

      <p><strong><%= t('activerecord.attributes.position.city') %>:</strong> <%= @position.city %></p>
      <p><strong><%= t('activerecord.attributes.position.state') %>:</strong> <%= @position.state %></p>

      <p><strong><%= t('activerecord.attributes.position.summary') %>:</strong></p>
      <p><%= @position.summary %></p>

      <p><strong><%= t('activerecord.attributes.position.description') %>:</strong></p>
      <p><%= @position.description %></p>

      <p><strong><%= t('activerecord.attributes.position.publish') %>:</strong> 
        <%= @position.publish? ? t('yes') : t('no') %></p>

      <p><strong><%= t('activerecord.attributes.position.company') %>:</strong> <%= @position.company.name %></p>
    </div>

    <div class="card-footer">
      <%= link_to t('buttons.edit'), edit_position_path(@position), class: 'btn btn-primary' %>
      <%= link_to t('buttons.delete'), position_path(@position),  data: { turbo_method: 'delete', turbo_confirm: t('messages.confirm_delete') }, class: 'btn btn-danger' %>
      <%= link_to t('buttons.back'), positions_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
